{
  "workflowId": "solo-founder-workflow",
  "workflowName": "Solo Founder Project Builder",
  "storageDir": ".workflow",
  "phases": [
    {
      "id": "ideation",
      "name": "Stage 0: Ideation",
      "description": "아이디어를 구체화하고 검증합니다",
      "order": 0,
      "command": "/ideate",
      "completionArtifact": "outputs/stage-0/idea-brief.md",
      "steps": [
        {
          "id": "idea-capture",
          "name": "Idea Capture",
          "description": "아이디어 수집 및 기록"
        },
        {
          "id": "problem-definition",
          "name": "Problem Definition",
          "description": "문제 정의 및 타겟 사용자 파악"
        },
        {
          "id": "solution-framing",
          "name": "Solution Framing",
          "description": "솔루션 구체화 및 MVP 정의"
        },
        {
          "id": "idea-validation",
          "name": "Idea Validation",
          "description": "시장/기술 검증 및 리스크 분석"
        },
        {
          "id": "brief-generation",
          "name": "Brief Generation",
          "description": "최종 브리프 문서 생성"
        }
      ],
      "artifacts": [
        "outputs/stage-0/raw-idea.md",
        "outputs/stage-0/problem-statement.md",
        "outputs/stage-0/solution-outline.md",
        "outputs/stage-0/validation-report.md",
        "outputs/stage-0/idea-brief.md"
      ]
    },
    {
      "id": "planning",
      "name": "Stage 1: Planning",
      "description": "기능을 정의하고 PRD를 작성합니다",
      "order": 1,
      "command": "/plan",
      "completionArtifact": "outputs/stage-1/prd.md",
      "steps": [
        {
          "id": "feature-prioritization",
          "name": "Feature Prioritization",
          "description": "MVP 기능 우선순위 정리"
        },
        {
          "id": "user-stories",
          "name": "User Stories",
          "description": "사용자 스토리 작성"
        },
        {
          "id": "user-flow",
          "name": "User Flow",
          "description": "사용자 흐름 정의"
        },
        {
          "id": "screen-structure",
          "name": "Screen Structure",
          "description": "화면 구조 정의"
        },
        {
          "id": "prd-generation",
          "name": "PRD Generation",
          "description": "최종 PRD 문서 생성"
        }
      ],
      "artifacts": [
        "outputs/stage-1/feature-priority.md",
        "outputs/stage-1/user-stories.md",
        "outputs/stage-1/user-flow.md",
        "outputs/stage-1/screen-structure.md",
        "outputs/stage-1/prd.md"
      ]
    },
    {
      "id": "design",
      "name": "Stage 2: Design",
      "description": "디자인 시스템과 UI 명세를 만듭니다",
      "order": 2,
      "command": "/design",
      "completionArtifact": "outputs/stage-2/design-spec.md",
      "steps": [
        {
          "id": "visual-direction",
          "name": "Visual Direction",
          "description": "브랜드 톤, 분위기, 참고 서비스 결정"
        },
        {
          "id": "design-system",
          "name": "Design System",
          "description": "색상, 타이포, 간격 등 디자인 시스템 정의"
        },
        {
          "id": "component-spec",
          "name": "Component Spec",
          "description": "UI 컴포넌트 라이브러리 명세"
        },
        {
          "id": "wireframes",
          "name": "Wireframes",
          "description": "화면별 레이아웃 및 와이어프레임"
        },
        {
          "id": "design-spec",
          "name": "Design Spec",
          "description": "최종 디자인 핸드오프 문서"
        }
      ],
      "artifacts": [
        "outputs/stage-2/visual-direction.md",
        "outputs/stage-2/design-system.md",
        "outputs/stage-2/component-spec.md",
        "outputs/stage-2/wireframes.md",
        "outputs/stage-2/design-spec.md"
      ]
    },
    {
      "id": "development",
      "name": "Stage 3: Development",
      "description": "실제 코드를 작성하고 빌드합니다",
      "order": 3,
      "command": "/develop",
      "completionArtifact": "outputs/stage-3/build-config.md",
      "steps": [
        {
          "id": "tech-stack",
          "name": "Tech Stack",
          "description": "기술 스택 선택 및 결정"
        },
        {
          "id": "project-setup",
          "name": "Project Setup",
          "description": "프로젝트 초기화 및 boilerplate"
        },
        {
          "id": "data-modeling",
          "name": "Data Modeling",
          "description": "데이터 모델 및 스키마 설계"
        },
        {
          "id": "api-design",
          "name": "API Design",
          "description": "API 엔드포인트 설계"
        },
        {
          "id": "auth-impl",
          "name": "Auth Implementation",
          "description": "인증/인가 구현"
        },
        {
          "id": "core-features",
          "name": "Core Features",
          "description": "MVP 핵심 기능 구현"
        },
        {
          "id": "ui-impl",
          "name": "UI Implementation",
          "description": "UI 컴포넌트 및 화면 구현"
        },
        {
          "id": "testing",
          "name": "Testing",
          "description": "테스트 및 버그 수정"
        },
        {
          "id": "build-ready",
          "name": "Build Ready",
          "description": "빌드 설정 및 배포 준비"
        }
      ],
      "artifacts": [
        "outputs/stage-3/tech-stack.md",
        "outputs/stage-3/project-setup.md",
        "outputs/stage-3/data-model.md",
        "outputs/stage-3/api-spec.md",
        "outputs/stage-3/auth-impl.md",
        "outputs/stage-3/feature-impl.md",
        "outputs/stage-3/ui-impl.md",
        "outputs/stage-3/test-report.md",
        "outputs/stage-3/build-config.md"
      ]
    },
    {
      "id": "deployment",
      "name": "Stage 4: Deployment",
      "description": "무료 호스팅에 배포합니다",
      "order": 4,
      "command": "/deploy",
      "completionArtifact": "outputs/stage-4/deployment-complete.md",
      "steps": [
        {
          "id": "deploy-prep",
          "name": "Deploy Preparation",
          "description": "호스팅 선택, 환경변수 설정"
        },
        {
          "id": "deploy-execution",
          "name": "Deploy Execution",
          "description": "배포 실행, 빌드 에러 해결"
        },
        {
          "id": "launch-verification",
          "name": "Launch Verification",
          "description": "헬스체크, 핵심 기능 검증"
        }
      ],
      "artifacts": [
        "outputs/stage-4/deploy-prep.md",
        "outputs/stage-4/deploy-log.md",
        "outputs/stage-4/deployment-complete.md"
      ]
    }
  ]
}
